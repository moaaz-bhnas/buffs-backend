{
  "name": "camper-api",
  "version": "1.0.0",
  "description": "Camper backend API",
  "main": "server.js",
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "node -r tsconfig-paths/register -r ts-node/register",
    "ext": "ts, js"
  },
  "scripts": {
    "dev": "npx nodemon src/server.ts",
    "start": "NODE_ENV=production node dist/server.js",
    "test": "mocha -r ts-node/register --timeout 100000 src/tests/**/*.ts",
    "test-single": "mocha -r ts-node/register --timeout 100000",
    "deploy": "git add . && git commit -m Heroku && git push heroku main"
  },
  "author": "moaaz-bhnas",
  "license": "MIT",
  "dependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.13",
    "@types/express-mongo-sanitize": "^2.1.0",
    "@types/express-rate-limit": "^6.0.0",
    "@types/helmet": "^4.0.0",
    "@types/hpp": "^0.2.2",
    "@types/jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "colors": "^1.4.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^6.7.0",
    "helmet": "^7.0.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.2.0",
    "morgan": "^1.10.0",
    "node-geocoder": "^4.2.0",
    "slugify": "^1.6.6",
    "tsconfig-paths": "^4.2.0",
    "xss-clean": "^0.1.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.0.1",
    "@types/chai": "^4.3.5",
    "@types/express": "^4.17.17",
    "@types/mocha": "^10.0.1",
    "@types/mongoose": "^5.11.97",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.2.3",
    "@types/node-geocoder": "^4.2.1",
    "@types/supertest": "^2.0.12",
    "chai": "^4.3.7",
    "mocha": "^10.2.0",
    "nodemon": "^2.0.22",
    "supertest": "^6.3.3",
    "ts-node": "10.9.1",
    "typescript": "^5.0.4"
  }
}
